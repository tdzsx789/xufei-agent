{
  "name": "xufei-agent",
  "version": "1.0.0",
  "description": "Electron应用 - 网页启动器和文件管理工具",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "server": "node server.js"
  },
  "keywords": [
    "electron",
    "web-launcher",
    "file-manager"
  ],
  "author": "xufei",
  "license": "MIT",
  "devDependencies": {
    "electron": "^38.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1"
  },
  "build": {
    "appId": "com.xufei.agent",
    "productName": "Xufei Agent",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    }
  }
}
