{
  "name": "xufei-agent",
  "version": "1.0.0",
  "description": "Electron应用 - 网页启动器和文件管理工具",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "npm run build:server && npm run build:win",
    "build:win": "electron-builder --win",
    "server": "node server.js",
    "build:server": "pkg server.js --targets node18-win-x64 --output dist/server.exe",
    "build:all": "npm run build:server && npm run build:win"
  },
  "keywords": [
    "electron",
    "web-launcher",
    "file-manager"
  ],
  "author": "xufei",
  "license": "MIT",
  "devDependencies": {
    "electron": "^38.0.0",
    "electron-builder": "^24.13.3",
    "rimraf": "^6.0.1",
    "pkg": "^5.8.1"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1"
  },
  "build": {
    "appId": "com.xufei.agent",
    "productName": "Xufei Agent",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "renderer.js",
      "web-server.js",
      "index.html",
      "style.css",
      "config.json",
      "project.json",
      "app/**/*",
      "!node_modules/**/*",
      "!dist/**/*",
      "!.git/**/*",
      "!.gitignore"
    ],
    "extraResources": [
      {
        "from": "server.js",
        "to": "server.js"
      },
      {
        "from": "config.json",
        "to": "config.json"
      },
      {
        "from": "project.json",
        "to": "project.json"
      },
      {
        "from": "dist/server.exe",
        "to": "server.exe"
      }
    ],
    "win": {
      "target": "portable"
    },
    "portable": {
      "artifactName": "start.exe"
    }
  }
}
